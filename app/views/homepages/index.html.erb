<section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <% work = Work.spot_light %>
      
      <%= link_to work.title, work_path(work.id), :class => "spotlight__link-to" %> by 
      <%= work.creator %>
    </h2>
    <p class="spotlight__description">
      28 votes - <%= work.description%>
    </p>
</section>

<section class="top-ten__container">
  <section class="top-ten__list-container">
    <h2 class="top-ten__header">
      Top Movies
    </h2>
    <ul class="list-group top-ten__list">
     <% Work.top_ten_list("movie").each do |work| %>
      <li class="list-group-item">
        <h4>
          <%= link_to work.title, work_path(work)%>
          <small class="top-ten__creator"> By <%= work.creator %></small>
        </h4>
        <p><%= work.votes.count %> </p>
      </li>
    <% end %>
    </ul>
  </section>

  <section class="top-ten__list-container">
    <h2 class="top-ten__header">
      Top Books
    </h2>
    <ul class="list-group top-ten__list">
     <% Work.top_ten_list("book").each do |work| %>
      <li class="list-group-item">
        <h4>
          <%= link_to work.title, work_path(work)%>
          <small class="top-ten__creator"> By <%= work.creator %></small>
        </h4>
        <p> <%= work.votes.count %> </p>
      </li>
    <% end %>
    </ul>
  </section>

  <section class="top-ten__list-container">
    <h2 class="top-ten__header">
      Top Albums
    </h2>
    <ul class="list-group top-ten__list">
     <% Work.top_ten_list("album").each do |work| %>
      <li class="list-group-item">
        <h4>
          <%= link_to work.title, work_path(work)%>
          <small class="top-ten__creator"> By <%= work.creator %></small>
        </h4>
        <p> <%= work.votes.count %> </p>
      </li>
    <% end %>
    </ul>
  </section>
</section>