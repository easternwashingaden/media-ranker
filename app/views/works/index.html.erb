<section class="media-table">
  <h4>Albums</h4>  
  <% if @works.where(category: "album").length > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.where(category: "album").each do |album| %>
          <tr>
            <td><%= link_to album.title, work_path(album.id)%></td>
            <td><%= album.creator %></td>
            <td><%= album.publication_year %></td>
          </tr>
        <% end %>
    </table>
    <% else %>
      <p>No work in the system!</p>
    <% end %>
      </tbody>
    </table>
  </section>

