<section class="media-table">
  <h4>Albums</h4>  
  <% if @works.where(category: "album").length > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @works.where(category: "album").each do |work| %>
          <tr>
            <td>0</td>
            <td><%= link_to work.title, work_path(work.id)%></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td class="btn btn-primary" rel="nofollow" data-method="post" href="/works/593/upvote">Upvote</td> 
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No work in the system!</p>
  <% end %>
</section>

