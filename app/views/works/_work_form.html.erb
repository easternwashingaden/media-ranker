<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work, class: 'work-form' do |f| %>
  <div class='form-group'>
    <%= f.label :category %>
    <%= f.select :category, options_for_select(["album","book","movie"], @work.category),{} ,class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :creator %>
    <%= f.text_field :creator, :class => "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year, :class => "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <%= f.submit "#{action_name} Work", class: "btn btn-primary" %>
<% end %>
