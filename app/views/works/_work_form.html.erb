<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work, class: 'work-form' do |f| %>
  <div>
    <%= f.label :category %>
    <%= f.select(:category, ["album", "book", "movie"]) %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :titel %>
  </div>

  <div>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
  </div>

  <div>
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>
  </div>
  
  <%= f.submit "#{action_name} Work", class: "button" %>
<% end %>


